<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.screens.MealInfoScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/back_button_margin"
                android:layout_marginTop="@dimen/back_button_margin"
                android:background="#00FFFFFF"
                android:contentDescription="@string/back"
                android:scaleType="fitXY"
                android:src="@drawable/backbutton" />

            <TextView
                android:id="@+id/title_of_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:paddingTop="@dimen/title_padding"
                android:text="Meal Name Here"
                android:textColor="@color/colorDefaultText"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/price_of_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/price"
                android:textColor="@color/colorDefaultText"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/type_of_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:text="@string/type_of_meal"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_msg_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/type_of_meal"
                    android:fontFamily="@font/nunito_sans"
                    android:gravity="center_horizontal"
                    android:text="@string/unable_to_get_info"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/cuisine_of_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:text="@string/type_of_cuisine"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msg_cuisine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cuisine_of_meal"
                    android:fontFamily="@font/nunito_sans"
                    android:gravity="center_horizontal"
                    android:text="@string/unable_to_get_info"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/ingredients_of_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:text="@string/ingredients"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msg_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ingredients_of_meal"
                    android:fontFamily="@font/nunito_sans"
                    android:gravity="center_horizontal"
                    android:text="@string/unable_to_get_info"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/allergens_of_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:text="@string/allergen"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msg_allergens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/allergens_of_meal"
                    android:fontFamily="@font/nunito_sans"
                    android:gravity="center_horizontal"
                    android:text="@string/unable_to_get_info"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/description_of_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:text="@string/description_title"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msg_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/description_of_meal"
                    android:fontFamily="@font/nunito_sans"
                    android:gravity="center_horizontal"
                    android:text="@string/unable_to_get_info"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/offering_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="offer/unoffer meal"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/remove_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="Remove Meal"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>